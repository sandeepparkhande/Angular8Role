{
    "ngxForm": [{
        "key": "investments",
        "type": "repeat",
        "templateOptions": {
            "addText": "Add another investment"
        },
        "fieldArray": {
            "fieldGroup": [{
                    "className": "col-sm-4",
                    "type": "input",
                    "key": "investmentName",
                    "order": "3",
                    "templateOptions": {
                        "label": "Name of Investment:",
                        "required": true
                    }
                },
                {
                    "type": "input",
                    "key": "investmentDate",
                    "order": "2",
                    "className": "col-sm-4",
                    "templateOptions": {
                        "type": "date",
                        "label": "Date of Investment:"
                    }
                },
                {
                    "type": "input",
                    "order": "1",
                    "key": "stockIdentifier",
                    "className": "col-sm-4",
                    "templateOptions": {
                        "label": "Stock Identifier:"
                    }
                }
            ]
        }
    }]
}